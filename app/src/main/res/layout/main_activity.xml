    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频弹幕(图文并茂)"
        android:onClick="videoDanmu"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频弹幕（多彩文字）"
        android:onClick="videoDanmu2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全局通知弹幕"
        android:onClick="notificationDanmu"/>
