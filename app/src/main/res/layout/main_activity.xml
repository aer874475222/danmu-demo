        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全局悬浮通知"
        android:onClick="suspensionNotification"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空页面(测试)"
